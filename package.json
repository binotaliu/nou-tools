{
  "$schema": "https://www.schemastore.org/package.json",
  "private": true,
  "type": "module",
  "scripts": {
    "prepare": "husky install",
    "build": "vite build",
    "dev": "vite",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,css,scss,html,blade.php,json,md,yml,yaml,vue}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,css,scss,html,blade.php,json,md,yml,yaml,vue}\"",
    "format:php": "vendor/bin/pint",
    "lint:commit": "commitlint --edit $1"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.2",
    "@commitlint/config-conventional": "^20.4.2",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.0.0",
    "axios": "^1.11.0",
    "concurrently": "^9.0.1",
    "husky": "^8.0.3",
    "laravel-vite-plugin": "^2.0.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.0",
    "prettier-plugin-blade": "^2.1.21",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tailwindcss": "^4.0.0",
    "vite": "^7.0.7"
  },
  "lint-staged": {
    "*.php": [
      "vendor/bin/pint --quiet",
      "git add"
    ],
    "*.{js,jsx,ts,tsx,css,scss,html,blade.php,json,md,yml,yaml,vue}": [
      "prettier --write",
      "git add"
    ]
  }
}
