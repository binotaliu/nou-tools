{
  "semi": false,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "es5",
  "printWidth": 80,
  "endOfLine": "lf",
  "bracketSpacing": true,
  "arrowParens": "avoid",

  "plugins": ["prettier-plugin-blade", "prettier-plugin-tailwindcss"],

  "tailwindStylesheet": "./resources/css/app.css",

  "overrides": [
    {
      "files": ["*.blade.php"],
      "options": { "parser": "blade" }
    }
  ]
}
